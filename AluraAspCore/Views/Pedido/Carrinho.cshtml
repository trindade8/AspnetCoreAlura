
@{
    ViewData["Title"] = "Meu Carrinho -  Pedido";

}

@model CarrinhoViewModel

<h3>Meu Carrinho</h3>

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-6">
                Item
            </div>
            <div class="col-md-2">
                Pr.Unit.
            </div>
            <div class="col-md-2">
                Qtd.
            </div>
            <div class="col-md-2">
                <span class="pull-right">Subtotal</span>
            </div>
        </div>
    </div>
    <div class="panel-body">

         @foreach (ItemPedido item in Model.Itens)
        {
            <div class="row row-center">
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-6">
                            <img src="~/images/produtos/small_@(item.Id).jpg" />
                        </div>
                        <div class="col-md-6">@(item.Produto.Nome)</div>
                    </div>
                </div>
                <div class="col-md-2">@(item.PrecoUnitario)</div>
                <div class="col-md-2"> @(item.Quantidade)</div>
                <div class="col-md-2"> <span class="pull-right">@(item.Subtotal)</span></div>
            </div>
            

        }
    </div>

    <div class="panel-footer">
        <div class="row">
            <div class="col-md-10 right"> 
                <span> Total: @(Model.Itens.Count) @(Model.Itens.Count <2 ? "Item":"Itens" )</span>
            </div>
            <div class="col-md-2">
                <span class="pull-right">
                   Total: R$ @(Model.TotalCarrinho)
                </span>
            </div>
        </div>

    </div>

</div>

<div class="row">
    <div class="col-md-12 ">

        <a asp-action="resumo" class="btn btn-success pull-right">Finalizar Pedido</a>
    </div>
</div>







